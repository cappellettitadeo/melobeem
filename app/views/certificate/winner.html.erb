<!doctype html>
<html>
<head>
  <meta charset='utf-8' />
  <style>
    body {
      width: 100%;
    }
    #content {
      position: relative;
      width: 100%;
      height: 100%;
      display: block;
      max-height: 991px;
    }
    .image-left {
      position: absolute;
      left: 0;
      top: 0;
    }
    .image-left img {
      height: 991px;
    }
    .image-right {
      position: absolute;
      right: 0;
      top: 0;
    }
    .image-right img {
      height: 991px;
    }
    .container-middle {
      width: 100%;
      margin: auto;
    }
    .main-text {
      padding-top: 100px;
    }
    .main-text p {
      text-align: center;
      padding: 0;
      margin: 0;
      color: #ff7098;
      font-family: "Rounded Elegance";
      font-size: 120px;
      line-height: 120px;
    }
    .main-text-greatings {
      padding-top: 30px;
    }
    .main-text-greatings p {
      text-align: center;
      padding: 0;
      margin: 0;
      color: #ff7098;
      font-family: "Rounded Elegance";
      font-size: 60px;
      line-height: 60px;
    }
    .entry-name {
      padding-top: 100px;
    }
    .entry-name p {
      text-align: center;
      padding: 0;
      margin: 0;
      color: #747474;
      font-family: "Rounded Elegance";
      font-size: 100px;
      line-height: 100px;
    }
    .entry-description {
      padding-top: 100px;
      padding-bottom: 150px;
    }
    .entry-description p {
      text-align: center;
      padding: 0;
      margin: 0;
      color: #747474;
      font-family: "Rounded Elegance";
      font-size: 30px;
      line-height: 30px;
    }
    .footer-container {
      position: relative;
      width: 60%;
      margin: 0 auto;
    }
    .footer-container .footer-date {
      text-align: left;
      position: absolute;
      left: 0;
      top: 0;
      padding: 0;
      margin: 0;
      color: #747474;
      font-family: "Rounded Elegance";
      font-size: 40px;
      line-height: 40px;
    }
    .footer-container .footer-label {
      text-align: right;
      position: absolute;
      right: 0;
      top: 0;
      padding: 0;
      margin: 0;
    }
    .footer-container .footer-label img {
      width: 260px;
      height: 40px;
      margin-top: 33px;
    }
  </style>
</head>
<body style="max-width:100%">
<div id="content" style="position: relative;width: 100%;height: 100%;display: block;max-height: 550px;">
  <div class="image-left">
    <%= wicked_pdf_image_tag('https://melobeem.com/certificate/left.png') %>
  </div>
  <div class="image-right">
    <%= wicked_pdf_image_tag('https://melobeem.com/certificate/right.png') %>
  </div>

  <div class="container-middle">
    <div class="main-text">
      <p>Certificate</p>
    </div>

    <div class="main-text-greatings">
      <p>proudly presented to</p>
    </div>

    <div class="entry-name">
      <p><%= entry.name %></p>
    </div>

    <div class="entry-description">
      <% case entry.final_rank %>
      <% when 1 %>
        <p>came 1st in the Melobeem competition in <%= entry.competition.starts_at.strftime('%B')%> <%= entry.competition.starts_at.strftime('%Y')%></p>
      <% when 2 %>
        <p>came 2nd in the Melobeem competition in <%= entry.competition.starts_at.strftime('%B')%> <%= entry.competition.starts_at.strftime('%Y')%></p>
      <% when 3 %>
        <p>came 3rd in the Melobeem competition in <%= entry.competition.starts_at.strftime('%B')%> <%= entry.competition.starts_at.strftime('%Y')%></p>
      <% else %>
        <p>came <%= entry.final_rank %> in the Melobeem competition in <%= entry.competition.starts_at.strftime('%B')%> <%= entry.competition.starts_at.strftime('%Y')%></p>
      <% end %>
    </div>

    <div class="footer-container">
      <div class="footer-date">
        <p><%= entry.competition.ends_at.strftime('%m.%d.%Y')%> </p>
      </div>
      <div class="footer-label">
        <%= wicked_pdf_image_tag('https://melobeem.com/certificate/melobeem.png') %>
      </div>
    </div>
  </div>
</div>
</body>
</html>
